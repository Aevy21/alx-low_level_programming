#include "main.h"

/**
* factorial - Returns the factorial of a given number.
* @n: The number for which the factorial is to be calculated.
* Return: The factorial of the given number, or -1 if n is lower than 0.
* Factorial of 0 is 1.
*/
int factorial(int n)
{
if (n < 0)
return (-1);

if (n == 0)
return (1);

return (n * factorial(n - 1)));
}
